<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textViewInputCollectorTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter input 1"
        android:layout_margin="2dp"
        android:gravity="center"
        android:id="@+id/editText1InputCollector"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter input 2"
        android:layout_margin="2dp"
        android:gravity="center"
        android:id="@+id/editText2InputCollector"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter input 3"
        android:layout_margin="2dp"
        android:gravity="center"
        android:id="@+id/editText3InputCollector"/>

</LinearLayout>
