<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Received Message Area -->
    <LinearLayout
        android:id="@+id/receivedMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="-7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="-8dp"
                android:background="@drawable/rounded_corner1"
                android:orientation="vertical">

                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/textViewSingleChatReceivedMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Message"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:paddingBottom="3dp"
                    android:textColor="#000"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSingleChatReceivedMessageDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="date"
                        android:textSize="8sp"
                        android:textColor="#444" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!-- Sent Message Area -->
    <LinearLayout
        android:id="@+id/sentMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginRight="-8dp"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical">

                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/textViewSingleChatSentMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Message"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:paddingBottom="3dp"
                    android:textColor="#000"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSingleChatSentMessageDeliveryReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="delivery"
                        android:textSize="8sp"
                        android:gravity="right"
                        android:textColor="#444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="8sp"
                        android:gravity="right"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/textViewSingleChatSentMessageDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="date"
                        android:textSize="8sp"
                        android:textColor="#444" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg1" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>