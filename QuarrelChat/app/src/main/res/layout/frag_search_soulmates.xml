<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <include layout="@layout/search_soulmate_area"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/search_soulmate_container"
        android:visibility="visible">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_search_soulmate_black_24dp"
            android:tint="@color/background_gray"
            android:layout_gravity="center"
            android:id="@+id/img_search_soulmate"/>

        <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/search_soulmate"
            android:textColor="@color/background_gray"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/tv_search_soulmate"/>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/res_container">

        <include layout="@layout/item_search_res"/>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>