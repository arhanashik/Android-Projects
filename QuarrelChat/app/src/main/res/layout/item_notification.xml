<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/icon_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fillAfter="true"
            android:fillEnabled="true">

            <ImageView
                android:id="@+id/imageViewItemProfilePic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_oval_bg"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:visibility="gone">

            </ImageView>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:id="@+id/icon_text"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/shape_oval_bg"
                android:textColor="@color/white"
                android:text="A"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon_selected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentTop="true"
            android:fillAfter="false"
            android:fillEnabled="false"
            android:visibility="gone">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/shape_oval_blue"/>

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:src="@drawable/phone" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewItemName"/>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Timestamp"
                android:textSize="11sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/textViewItemTimestamp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Status"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewNotification"/>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/btnCancel"
                android:background="@drawable/selector_xml_btn_bg"
                android:padding="3dp"
                android:text="Accept"
                android:textSize="13dp"
                android:textColor="@color/text_white"
                android:id="@+id/btnAccept"/>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_xml_btn_red"
                android:padding="3dp"
                android:text="Cancel"
                android:textSize="13dp"
                android:textColor="@color/text_white"
                android:id="@+id/btnCancel"/>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:text="Done"
                android:textSize="13dp"
                android:textColor="@color/background_color"
                android:id="@+id/txtDone"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
