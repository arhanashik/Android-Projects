<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/container">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:foreground="#50000000"
            android:id="@+id/img_container">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:id="@+id/img_profile_pic"/>

            <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/background_color"
                android:text="A"
                android:textColor="@color/text_white"
                android:textSize="130sp"
                android:textStyle="bold"
                android:id="@+id/tv_icon"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#50000000"
            android:id="@+id/transparent_view_up"/>

        <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:gravity="left|center"
            android:text="Arhan Ashik"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tv_name"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_options_horizontal_black_24dp"
            android:tint="@color/white_greyish"
            android:id="@+id/img_option"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#50000000"
            android:id="@+id/transparent_view_down"/>

        <com.project.blackspider.quarrelchat.CustomView.SimpleLoveTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:text="Message Count\nSent: 0\nReceived: 0"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tv_msg_count"/>

    </RelativeLayout>
</LinearLayout>